            <a class="nav-link" href="/admin/addUser">RESIDENTS</a>
            <a class="nav-link" id="active" href="/admin/documents">DOCUMENTS</a>
            <div class="dropdown">
              <img src="/images/residents(admin)/baseline_person_white_24dp.png" height="30px" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </div>
             
        </div>
    </nav>

    <div class="content">
      <div class="table-responsive">
        <table class="table table-hover table-borderless">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Flat</th>
              <th scope="col">Name</th>
              <th scope="col">Type</th>
              <th scope="col">Document Name</th>
              <th scope="col">File</th>
            </tr>
          </thead>
          <tbody>
            <% if (documents.length) { %> 
              <% for (const document of documents) { %>
              <tr>
                <td><%- document.date.toLocaleString().split(",")[0] %> </td>
                <td><%- `${document.resident.flat.wing}/${document.resident.flat.roomNumber}` %> </td>
                <td><%- document.resident.name %> </td>
                <td><%- document.resident.type %> </td>
                <td><%- document.name %> </td>
                <td><div class="lbtn">
                  <a class="view-link" href=<%- document.image.url %> target="_blank" >View</a>      
              </div></td>
              </tr>
              <% } %>
            <% } %> 
          <tbody>
            
          </tbody>
        </table>
      </div>
    </div>

    <div class="back-button">
      <div class="col-md-12 text-center">
        <button type="button" class="btn">BACK</button>
      </div>
    </div>

    <footer>
      <div class="card" id="pagefooter">
          <div class="card-body" id="footerbody">
            <h1 class="card-title" id="footertitle">Get In Touch</h1>
            <p class="card-text" id="footertext">To learn more and for further enquiries</p>
            <h4><a href="#">Click Here</a></h4>
            <div class="footerimg">
              <img src="/images/residents(admin)/Up arrow.png" alt="arrow" height="40px">
            </div>
          </div>
          <div class="card-footer" id="footerend">
              <h5>Contact: +918879523021 </h5>
              <div class="footerimageslogo">
                <a href="#"><img src="/images/residents(admin)/youtube-logo-.png" height="35px"></a>
                <a href="#"><img src="/images/residents(admin)/logo-instagram-.png" height="35px"></a>
                <a href="#"><img src="/images/residents(admin)/logo-twitter-.png" height="35px"></a>
                <a href="#"><img src="/images/residents(admin)/facebook logo.png" height="35px"></a>
              </div>  
          </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>