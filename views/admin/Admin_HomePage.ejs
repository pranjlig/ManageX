    <h3>Last Requested Permissions</h3>
    <div class="container-center">
      <div class="row">
        <% for (const permission of permissions) { %>
          <div class="col-md-6">
            <div class="box">
              <h4>Permission for <%- permission.event %>.</h4>
              <div class="row">
                <div class="col-2">
                  <img src="/images/admin-home/baseline_person_blue_24dp.png" height="70px">
                </div>
                <div class="col-4">
                  
                  <p>Name:&nbsp&nbsp&nbsp<span id="fill"><%- permission.seeker.name %></span></p>
                  <p>Contact:&nbsp&nbsp&nbsp<span id="fill"><%- permission.seeker.phone %></span></p>
                  <p>Date:&nbsp&nbsp&nbsp<span id="fill"><%- permission.occasionDate.toLocaleString().split(",")[0] %></span></p>
                </div>
                <div class="col-4">
                  <p>Event:&nbsp&nbsp&nbsp<span id="fill"><%- permission.event %> </span></p>
                  <p>Venue:&nbsp&nbsp&nbsp<span id="fill"><%- permission.venue %> </span></p>
                  <p>Flat:&nbsp&nbsp&nbsp<span id="fill"><%- `${permission.seeker.flat.wing}/${permission.seeker.flat.roomNumber}` %></span></p>
                </div>
              </div>
              
            </div>
          </div>
        <% } %>  
        

  </div>
</div>
  <h3>Last Complaints</h3>
  <div class="container-center">
    <div class="box">
      <div class="table-responsive">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th scope="col">DATE</th>
            <th scope="col">RESIDENT</th>
            <th scope="col">SUBJECT</th>
            
          </tr>
        </thead>
        <tbody>
          <% for (const complaint of complaints) { %>
            <tr>
              <td scope="row"><%- complaint.date.toLocaleString().split(",")[0] %></td>
              <td><%- `${complaint.complainant.name}, ${complaint.complainant.flat.wing}/${complaint.complainant.flat.roomNumber}` %></td>
              <td><%- complaint.subject %> </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
<h3>Last Dues</h3>
<div class="container-center">
  <div class="box">
    <div class="table-responsive">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col">ISSUE DATE</th>
          <th scope="col">BILL NAME</th>
          <th scope="col">AMOUNT</th>
          <th scope="col">DUE DATE</th>
        </tr>
      </thead>
      <tbody>
        <% for (const due of dues) { %>
          <tr>
            <td scope="row"><%- due.date.toLocaleString().split(",")[0] %></td>
            <td><%- due.name %></td>
            <td><%- due.amount %> </td>
            <td scope="row"><%- due.dueDate.toLocaleString().split(",")[0] %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  </div>
</div>
