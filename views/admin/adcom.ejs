        </div>
    </nav>

    <div class="content">
        <div class="table-responsive">
          <table class="table table-hover table-borderless">
            <thead>
              
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Flat</th>
                <th scope="col">Name</th>
                <th scope="col">Subject</th>
                <th scope="col">Details</th>
                <th scope="col">Change Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (complaints.length) { %> 
                <% const revComplaints = complaints.reverse() %> 
                <% for (const complaint of revComplaints) { %>
                <tr>
                  <td><%- complaint.date.toLocaleString().split(",")[0] %> </td>
                  <td><%- `${complaint.complainant.flat.wing}/${complaint.complainant.flat.roomNumber}` %> </td>
                  <td><%- complaint.complainant.name %> </td>
                  <td><%- complaint.subject %> </td>
                  <td><%- complaint.details %> </td>
                  <!-- <td><%- complaint.status %> </td> -->
                  <td>
                    <% if (complaint.status == "Resolved") { %>
                    <span class="Per5">Resolved</span>
                    <% }  else { %> 
                    <div class="d-grid gap-2 d-md-block"> 
                      <form class="status-form"  method="POST" action="<%- `/admin/complaints/${complaint._id}/resolved` %>">
                        <button class="btn btn-outline-success submit">Resolve</button>
                      </form>
                      
                    </div>
                    <% } %> 
                  </td>
                  
                </tr>
                <% } %>
              <% } %>  
              
            </tbody>
          </table>
        </div>
      </div>

    <div class="back-button">
      <div class="col-md-12 text-center">
