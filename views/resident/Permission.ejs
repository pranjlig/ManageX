              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
      </div>
  </nav>

    <div class="container-form">
      <h2>ASK FOR PERMISSION</h2>
      <div class="form-align">
        <form method="POST">
          <div class="mb-3">
            <label for="Date" class="form-label">Date</label>
            <input type="date" required name="occasionDate" class="form-control" id="Date"> 
          </div>
          <div class="mb-3">
            <label for="Time" class="form-label">Time</label>
            <input type="text" required name="time" class="form-control" id="Time">
          </div>
          <div class="mb-3">
            <label for="Occassion" class="form-label">Event</label>
            <input type="text"required required name="event" class="form-control" id="Occassion">
          </div>
          <div class="mb-3">
            <label for="Details" class="form-label">Details</label>
            <input type="Details" required name="details" class="form-control" id="Details">
          </div>
          <div class="mb-3">
            <label for="About" class="form-label">Venue</label>
            <input type="text-area" required name="venue" class="form-control" id="About">
          </div>
          <div class="mb-3">
            <label for="Contact" class="form-label">Organizer's Contact</label>
            <input type="tel" required name="phone" class="form-control" id="Contact">
          </div>
          <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-secondary">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <div class="content">
      <h3>PREVIOUS PERMISSIONS</h3>
      <div class="table-responsive">
        <table class="table table-hover table-borderless">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Subject</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (permissions.length) { %> 
              <% const revPermissions = permissions.reverse() %> 
              <% for (const permission of revPermissions) { %>
                <tr>
                  <td><%- permission.occasionDate.toLocaleString().split(",")[0] %> </td>
                  <td><%- permission.time %> </td>
                  <td><%- permission.event %> </td>
                  <td><% if (permission.status == "Accepted") { %>
                    <span class="Per5">Accepted</span>
                    <% } else if  (permission.status == "Rejected") { %> 
                    <span class="Per7">Rejected</span>
                    <% } else if (permission.status == "Pending") {%>   
                      <span class="Per6">Pending</span>
                    <% } %></td>
                </tr>
              <% } %>  
            <% } %> 
            <!-- <tr>
              <td>21 Sept 2021</td>
